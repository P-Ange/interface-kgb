{% extends 'base.html.twig' %}

{% block title %}KGB Interface{% endblock %}

{% block body %}
    <div class=" row justify-content-center text-center mt-5">
        <div class="col-auto">
        <h1 class="text-white mb-5">Liste des Refuges</h1>

        <div class="container  d-flex justify-content-center">
            <div class="table-responsive ">
                <table class="tftable table text-white">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>TYPE</th>
                        <th>ADRESSE</th>
                        <th>NOM DE CODE</th>
                        <th>PAYS</th>
                        <th>ACTIONS</th>
                    </tr>
                    </thead>
                    <tbody>{% for hidingplace in hidingplaces %}
                        <tr>
                            <td>{{ hidingplace.id }}</td>
                            <td>{{ hidingplace.type }}</td>
                            <td>{{ hidingplace.address}}</td>
                            <td>{{ hidingplace.alias}}</td>
                            <td>{{ hidingplace.country}}</td>
                            <td><a class="button1 mb-2" href="{{ path('hidingplacesdetails', {'id':hidingplace.id}) }}">INFORMATIONS</a>
                                {% if app.user %}
                                    <a href="{{ path ('hidingplace_modify', {'id':hidingplace.id}) }}" class="button2 mb-2">MODIFIER</a>
                                    {{ include('hidingplacesdetails/delete_form.html.twig') }}
                                {% endif %}</td>
                        </tr> {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
     {% if app.user %}
    <a href="{{ path ('hidingplace_add') }}" class="button4">AJOUTER UN REFUGE</a>
{% endif %}   </div>
    </div>
{% endblock %}
