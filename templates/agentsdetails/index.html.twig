{% extends 'base.html.twig' %}

{% block title %}KGB Interface{% endblock %}

{% block body %}
    <div class=" row justify-content-center text-center mt-5">
        <div class"col-auto">
        <h1 class="text-white mb-5">DÃ©tails de l'agent</h1>
        <style>
            .tftable {font-size:14px;color:#fbfbfb;border-width: 1px;border-color: #686767;border-collapse: collapse;}
            .tftable tr {background-color:#2f2f2f;}
            .tftable td {font-size:14px; border-width: 1px;padding: 8px;border-style: solid;border-color: #686767;}
            .tftable tr:hover {background-color:#171515;}
            .premiereligne {font-size:14px;background-color:#171515;border-width: 1px;padding: 8px;border-style: solid;border-color: #686767;text-align:center;}
        </style>
        <div class="container  d-flex justify-content-center" >
            <div class="table-responsive ">
                <table class="tftable" >
                    <tbody>
                        <tr><td class="premiereligne fw-bold">ID</td><td class="premiereligne">{{ agent.id }}</td></tr>
                        <tr><td class="fw-bold">PRENOM</td><td>{{ agent.firstname }}</td></tr>
                        <tr><td class="fw-bold">NOM</td><td>{{ agent.lastname}}</td></tr>
                        <tr><td class="fw-bold">DATE DE NAISSANCE</td><td>{{ agent.dateofbith | date ('d / m /Y')}}</td></tr>
                        <tr><td class="fw-bold">NOM DE CODE</td><td>{{ agent.idcode }}</td></tr>
                        <tr><td class="fw-bold">PAYS D'ORIGINE</td><td>{{ agent.country}}</td></tr>
                  {% for agent in agent.skills %}  <tr><td class="fw-bold">COMPETENCE</td><td>{{ agent.skill}}</td></tr>
                  {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    </div>
    <div class="container mt-2 d-flex justify-content-center">
        <a href="{{ path('agents') }}" class="button1">RETOUR</a></div>
{% endblock %}
