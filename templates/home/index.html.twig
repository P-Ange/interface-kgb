{% extends 'base.html.twig' %}

{% block title %}KGB Interface{% endblock %}

{% block body %}
<div class=" row justify-content-center text-center mt-5">
    <div class="col-auto">
    <h1 class="text-white">Tableau des Missions</h1>
      <div class="container">
        <div class="table-responsive">
    <table class="tftable table text-white">
        <thead>
            <tr>
            <th>ID</th>
            <th>MISSION</th>
            <th>OBJECTIF</th>
            <th>NOM DE CODE</th>
            <th>STATUT</th>
            <th>ACTIONS</th>
        </tr>
        </thead>
        <tbody>{% for mission in missions %}
            <tr>
             <td>{{ mission.id }}</td>
            <td>{{ mission.title }}</td>
            <td>{{ mission.description }}</td>
            <td>{{ mission.codename}}</td>
            <td>{{ mission.statusmission}}</td>
            <td>
                <a class="button1 mb-2" href="{{ path('missionsdetails', {'id':mission.id}) }}">INFORMATIONS</a>
                {% if app.user %}
                    <a href="{{ path ('mission_modify', {'id':mission.id}) }}" class="button2 mb-2">MODIFIER</a>
                    {{ include('missionsdetails/delete_form.html.twig') }}
                {% endif %}
            </td>
            </tr> {% endfor %}
        </tbody></table>
        </div>

</div>
    {% if app.user %}
    <a href="{{ path ('mission_add') }}" class="button4">AJOUTER UNE MISSION</a>
    {% endif %}
{% endblock %}
